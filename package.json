{
    "name": "@crypto-dev-amigos/workspace",
    "private": true,
    "scripts": {
        "build": "npm run build:common && npm run build:client",
        "build:common": "cd ./packages/common && npx tsc",
        "build:client": "cd ./packages/client && npm run build && copyfiles -u 3 ./packages/client/build/**/* ./web",
        "build:rarities": "cd ./packages/common && npm run build:rarities",
        "build:output": "// copy react site & // generate nft rarity files",
        "test": "cd ./packages/common && npm run test",
        "start": "npm run build:common && concurrently \"npm run start:client\" \"npm run start:server\"",
        "start:client": "cd ./packages/client && npm start",
        "start:server": "cd ./packages/server && npm start",
        "//": "https://stackoverflow.com/questions/30950032/how-can-i-run-multiple-npm-scripts-in-parallel"
    },
    "workspaces": [
        "./packages/*"
    ],
    "devDependencies": {
        "concurrently": "^6.2.1",
        "copyfiles": "^2.4.1"
    }
}